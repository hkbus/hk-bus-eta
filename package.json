{
  "name": "hk-bus-eta",
  "version": "3.7.4",
  "description": "Query the ETA (Estimated Time of Arrival) of HK Bus/Minibus/MTR/Lightrail",
  "main": "dist/index.js",
  "module": "esm/index.js",
  "files": [
    "dist",
    "esm",
    "src"
  ],
  "scripts": {
    "clean": "rimraf esm dist",
    "test": "jest",
    "prebuild": "yarn clean && yarn test",
    "build:esm": "tsc --target es2018 --outDir esm",
    "build:cjs": "tsc --target es2015 --module commonjs --outDir dist",
    "build": "yarn build:cjs && yarn build:esm",
    "prepublish": "yarn build",
    "est": "ts-node ./est.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hkbus/hk-bus-eta.git"
  },
  "keywords": [
    "eta",
    "hkbus",
    "bus-eta",
    "bus-schedule",
    "hk-bus",
    "bus",
    "mtr",
    "lightrail",
    "minibus",
    "data.gov.hk"
  ],
  "author": "chunlaw",
  "license": "GPL-3.0-only",
  "bugs": {
    "url": "https://github.com/hkbus/hk-bus-eta/issues"
  },
  "homepage": "https://hk-bus-eta.hkbus.app/",
  "devDependencies": {
    "@types/jest": "^29.5.4",
    "jest": "^29.6.4",
    "prettier": "^3.4.2",
    "rimraf": "^5.0.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "date-fns": "^4.1.0",
    "date-fns-tz": "^3.2.0"
  }
}
